{
    "manifest_version": 2,
    "name": "Azure Mask",
    "version": "0.1.0",
    "description": "Conceals sensitive Azure information on the page",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "mask-process.js"
            ],
            "css": [
                "mask-process.css"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}